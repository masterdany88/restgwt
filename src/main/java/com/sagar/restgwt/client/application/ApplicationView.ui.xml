<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:npui="urn:import:com.sagar.restgwt.client.application.ui.tabs"
             xmlns:npui2="urn:import:com.sagar.restgwt.client.application.ui.linkmenu">

    <ui:with field="resources" type="com.sagar.restgwt.client.resources.AppResources"/>

    <g:HTMLPanel>
        <g:InlineLabel ui:field="topMessage" styleName="{resources.style.topMessage}" visible="false"/>

        <header>
            <div class="{resources.style.container}">
                <h1>GWTP Tabs Sample</h1>
                <ul>
                    <li>
                        <a href="https://github.com/ArcBees/GWTP">[ Project Home ]</a>
                    </li>
                    <li>
                        <a href="https://github.com/ArcBees/GWTP-Samples/tree/master/gwtp-samples/gwtp-sample-tab">[
                            Source ]
                        </a>
                    </li>
                </ul>
            </div>
        </header>

        <div class="{resources.style.container}">
            <npui:RoundTabPanel ui:field="tabPanel"/>
            <npui2:LinkMenu ui:field="linkMenu"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
