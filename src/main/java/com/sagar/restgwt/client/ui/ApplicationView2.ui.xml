<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:style>
        header, main, footer{
            padding-left: 280px;
        }
        .label{
            margin: 24px;
        }
        .footer{
            position: fixed;
            width: 100%;
            bottom: 0px;
            padding-top: 0px !important;
        }
    </ui:style>
    <g:HTMLPanel>
    
    
        <header>
        
            <!-- NavBar -->
            <m:MaterialNavBar activates="sideNav" backgroundColor="blue">
                <m:MaterialNavBrand waves="DEFAULT" text="Starter"/>
                <m:MaterialNavSection float="RIGHT">
                    <m:MaterialTooltip text="Starter" position="BOTTOM">
                        <m:MaterialLink waves="DEFAULT" iconType="WHATSHOT" iconPosition="NONE"/>
                    </m:MaterialTooltip>
                    <m:MaterialTooltip text="Apps" position="BOTTOM">
                        <m:MaterialLink waves="DEFAULT" iconType="VIEW_MODULE" iconPosition="NONE"/>
                    </m:MaterialTooltip>
                    <m:MaterialTooltip text="Notifications" position="BOTTOM">
                        <m:MaterialLink waves="DEFAULT" iconType="NOTIFICATIONS" iconPosition="NONE"/>
                    </m:MaterialTooltip>
                </m:MaterialNavSection>
            </m:MaterialNavBar>

            <!-- SideNav -->
            <m:MaterialSideNav type="OPEN" m:id="sideNav" closeOnClick="false" width="280" ui:field="sideNav">
            
                <m:MaterialLink waves="DEFAULT" text="Starter" textColor="blue" iconType="WHATSHOT"/>
                <m:MaterialLink waves="DEFAULT" text="Apps" textColor="blue" iconType="VIEW_MODULE"/>
                <m:MaterialLink waves="DEFAULT" text="Notifications" textColor="blue" iconType="NOTIFICATIONS" separator="true"/>
                <m:MaterialLink waves="DEFAULT" text="Navigation" textColor="blue" iconType="NAVIGATION"/>
                <m:MaterialLink waves="DEFAULT" text="Favorite" textColor="blue" iconType="FAVORITE" separator="true"/>
                <m:MaterialLink waves="DEFAULT" iconType="INBOX" textColor="blue" text="Inbox" />
                <m:MaterialLink waves="DEFAULT" iconType="STARS" textColor="blue" text="Starred" />
                <m:MaterialLink waves="DEFAULT" iconType="SEND" textColor="blue" text="Sent Mail" />
                <m:MaterialLink waves="DEFAULT" iconType="DRAFTS" textColor="blue" text="Drafts" />
				<m:MaterialLink waves="DEFAULT" iconType="MARKUNREAD" textColor="blue" text="All Mail" />
				                
            </m:MaterialSideNav>
            
            <!--Drop down -->
<!--             <m:MaterialDropDown activator="dropProfile">
                <m:MaterialLink text="First" iconType="POLYMER" fontSize="1em"/>
                <m:MaterialLink text="Second" iconType="POLYMER" fontSize="1em"/>
                <m:MaterialLink text="Third" iconType="POLYMER" fontSize="1em"/>
            </m:MaterialDropDown> -->
        </header>
        
        <m:MaterialContainer fontSize="0.8em" ui:field="container">
 			<!-- <m:MaterialWeather location="Wroclaw, Poland" color="blue"/> -->
 			<m:MaterialLabel text="Today" textColor="grey" addStyleNames="{style.label}"/>
            <!-- Collapsible -->
            <m:MaterialCollapsible type="POPOUT" grid="s12 m6 l8">
                <m:MaterialCollapsibleItem>
                    <m:MaterialCollapsibleHeader waves="DEFAULT">
                        <m:MaterialLink text="Travel" iconType="AIRPLANEMODE_ON" iconPosition="LEFT" textColor="purple"/>
                    </m:MaterialCollapsibleHeader>
                    <m:MaterialCollapsibleBody>
                        <m:MaterialLabel text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>
                    </m:MaterialCollapsibleBody>
                </m:MaterialCollapsibleItem>

                <m:MaterialCollapsibleItem>
                    <m:MaterialCollapsibleHeader waves="DEFAULT">
                        <m:MaterialLink text="Social" iconType="GROUP" iconPosition="LEFT" textColor="red"/>
                    </m:MaterialCollapsibleHeader>
                    <m:MaterialCollapsibleBody>
                        <m:MaterialLabel text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>
                        
                    </m:MaterialCollapsibleBody>
                </m:MaterialCollapsibleItem>

                <m:MaterialCollapsibleItem>
                    <m:MaterialCollapsibleHeader waves="DEFAULT">
                        <m:MaterialLink text="Updates" iconType="FLAG" iconPosition="LEFT" textColor="amber"/>
                    </m:MaterialCollapsibleHeader>
                    <m:MaterialCollapsibleBody>
                        <m:MaterialLabel text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>
                    </m:MaterialCollapsibleBody>
                </m:MaterialCollapsibleItem>

                <m:MaterialCollapsibleItem>
                    <m:MaterialCollapsibleHeader waves="DEFAULT">
                        <m:MaterialLink text="Purchases" iconType="ADD_SHOPPING_CART" iconPosition="LEFT" textColor="brown"/>
                    </m:MaterialCollapsibleHeader>
                    <m:MaterialCollapsibleBody>
                        <m:MaterialLabel text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>
                    </m:MaterialCollapsibleBody>
                </m:MaterialCollapsibleItem>

                <m:MaterialCollapsibleItem>
                    <m:MaterialCollapsibleHeader waves="DEFAULT">
                        <m:MaterialLink text="Promos" iconType="LOYALTY" iconPosition="LEFT" textColor="blue"/>
                    </m:MaterialCollapsibleHeader>
                    <m:MaterialCollapsibleBody>
                        <m:MaterialLabel text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>
                    </m:MaterialCollapsibleBody>
                </m:MaterialCollapsibleItem>

                <m:MaterialCollapsibleItem>
                    <m:MaterialCollapsibleHeader waves="DEFAULT">
                        <m:MaterialLink text="Finance" iconType="INSERT_CHART" iconPosition="LEFT" textColor="green"/>
                    </m:MaterialCollapsibleHeader>
                    <m:MaterialCollapsibleBody>
                        <m:MaterialLabel text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."/>
                    </m:MaterialCollapsibleBody>
                </m:MaterialCollapsibleItem>
            </m:MaterialCollapsible>
            
            
            
        </m:MaterialContainer>

        <!-- FAB -->
        <m:MaterialFAB>
            <m:MaterialTooltip text="Create" position="LEFT">
                <m:MaterialButton type="FLOATING" waves="DEFAULT" backgroundColor="red" iconType="ADD" size="LARGE"/>
            </m:MaterialTooltip>
            <m:MaterialFABList>
                <m:MaterialTooltip text="Theme" position="LEFT">
                    <m:MaterialAnchorButton type="FLOATING" waves="DEFAULT" backgroundColor="blue" iconType="PALETTE"/>
                </m:MaterialTooltip>
                <m:MaterialTooltip text="Mail " position="LEFT">
                    <m:MaterialAnchorButton type="FLOATING" waves="DEFAULT" backgroundColor="amber"  iconType="MAIL"/>
                </m:MaterialTooltip>
            </m:MaterialFABList>
        </m:MaterialFAB>





        <!-- Footer -->
        <m:MaterialFooter backgroundColor="blue" addStyleNames="{style.footer}">
            <m:MaterialFooterCopyright>
                <m:MaterialLabel text="Â© 2015 Copyright GWT Material" />
            </m:MaterialFooterCopyright>
        </m:MaterialFooter>
    </g:HTMLPanel>
    

</ui:UiBinder>